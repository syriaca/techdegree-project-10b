extends ../layout

block content
  h1 #{title}
  p
    a.button(href='/books/new') Create New Book

  include ../includes/navigation-filter.pug

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        tr
            td
              a(href=`/books/details/${book.id}`) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}