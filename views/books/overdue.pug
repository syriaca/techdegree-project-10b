extends ../layout

block content
  h1 #{title}
  p
    a.button(href='new_book.html') Create New Book

  include ../includes/navigation-filter.pug

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        tr
            td
              a(href='book_detail.html') #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}
