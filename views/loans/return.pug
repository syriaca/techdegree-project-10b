extends ../layout

block content
    h1 #{title}
    p
        strong Book Title: 
        | #{loans[0].Book.title}
    p
        strong Loaned By: 
        | #{loans[0].Patron.first_name + ' ' + loans[0].Patron.last_name}
    p
        strong Loaned On: 
        | #{loans[0].loaned_on}
    p
        strong Return By: 
        | #{loans[0].return_by}

    form(action=`/loans/return/${loans[0].id}` method='post')
        include ../error.pug
        p
            label(for='returned_on') Returned on:
            input#returned_on(type='text', value=`${returned_on}` name='returned_on')
        p
            input(type='submit', value='Return Book')

